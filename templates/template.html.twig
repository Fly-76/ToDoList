{% extends "base.html.twig" %}

{% block body %}
    {% if app.user %}

    {% endif %}        

    <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav mr-auto">
                <li><a class="nav-link" href="{{ path('project_index') }}">Mes projets</a></li>
                <li><a class="nav-link" href="{{ path('project_new') }}">Nouveau</a></li>
                <li><a class="nav-link" href="{{ path('project_archive') }}">Archives</a></li>
            </ul>
            <div class="form-inline text-white">
                {% if app.user %}
                    <a class="btn btn-outline-info my-2 my-sm-0" href="{{ path('app_logout') }}" type="button">Deconnexion</a>
                {% else %}        
                    <a class="btn btn-outline-info my-2 my-sm-0" href="{{ path('app_register') }}" type="button">Inscription</a>
                    <a class="btn btn-outline-info my-2 my-sm-0" href="{{ path('app_login') }}" type="button">Connexion</a>
                {% endif %}        
            </div>
        </div>
    </nav>    
    <!-- end navigation bar -->

    <!-- header -->
    <header class="jumbotron jumbotron-fluid text-white bg-dark">
        <div class="container">
            {% if app.user %}
                <h1>Gestion de projets : {{ app.user.civility }} {{ app.user.lastname }} {{ app.user.firstname }}</h1><hr>
            {% endif %}        
            <h3>{% block title %}{% endblock %}</h3>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{label}} alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}

        </div>
    </header>
    <!-- end header -->

    <!-- main -->
    <main class="container">
        <section class="row">
            {% block main %}{% endblock %}
        </section>
    </main>
    <!-- end main -->


    <!-- footer -->
    <footer class="jumbotron jumbotron-fluid text-white bg-dark mt-4 mb-0">
        <div class="container">
            <!-- <h1 class="display-4">ALB</h1> -->
            <p class="lead"><strong>µ Project</strong> Copyright © 2020 Franck Leuyer. Tous droits réservés.</p>
        </div>
    </footer>
    <!-- end footer -->

{% endblock %}




