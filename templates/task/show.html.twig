{% extends 'template.html.twig' %}

{% block title %}Task{% endblock %}

{% block main %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ task.state }}</td>
            </tr>
            <tr>
                <th>OpenDate</th>
                <td>{{ task.openDate ? task.openDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ScheduleDate</th>
                <td>{{ task.scheduleDate ? task.scheduleDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CloseDate</th>
                <td>{{ task.closeDate ? task.closeDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
